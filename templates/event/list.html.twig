{% extends 'base.html.twig' %}

{% block title %}Hello {{ parent() }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3></h3>
</div>

    {% for event in events %}
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src={{event.poster}} alt="BearsBeer image">
            <div class="card-body">
                <h5 class="card-title">Titre : {{event.name}}</h5>
                <p class="card-text">Description : {{event.Description}}</p>
                <a href="{{ path('event_show', {id: event.id}) }}">Voir plus</a>
                {% if date(event.startTime) <= date() and date(event.endTime) >= date() %}
                    <p>en cours</p>
                {% elseif date(event.endTime) < date() %}
                    <p>pass√©</p>
                {% else %}
                    <p>futur</p>
                {% endif %}


            </div>
        </div>

    {% endfor %}



   

{% endblock %}


