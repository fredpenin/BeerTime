{% extends 'base.html.twig' %}

{% block body %}
<h6>Inscription</h6>

{{ form_start(form, { 'attr': { 'novalidate': 'novalidate',
                                'class':'text-whitem p-3' } }) }}

{{ form_row(form.username, {'label': 'Nom d\'utilisateur', 
                            'attr':{ 'placeholder': 'Nom d\'utilisateur' }}) }}
{{ form_row(form.email, {'label': 'Adresse mail', 
                        'attr':{ 'placeholder': 'Adresse e-mail' }}) }}
{{ form_row(form.password, {'label': 'Mot de passe', 
                        'attr':{ 'placeholder': 'Saisissez votre mot de passe' }}) }}
{{ form_row(form.confirm_password, {'label': 'Confirmez le mot de passe', 
                                    'attr':{ 'placeholder': 'Confirmez votre mot de passe' }}) }}

